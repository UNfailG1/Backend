<h4>Hi, <%= @receiver.pp_username %></h4>
<p style="font-size: 16px">
  You have a new mail on <%= link_to "SPairing", @url %>.
</p>
<div class="row" style="height: 60px; margin-bottom: 0px;">
  <div class="col s2">
    <img src="<%= 'https://spairing-api.herokuapp.com' + @sender.pp_avatar %>" alt="" class="circle responsive-img"/>
  </div>
  <div class="col s10">
    <h5><%= @sender.pp_username %></h5>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <p style="font-size: 16px;">
      <%= truncate @message, length: 50%>
    </p>
  </div>
</div>
<p style="font-size: 16px;">
  To read the complete message, go to your <%= link_to "mailbox", @url + '/mailbox' %>.
</p>
<p style="font-size: 16px; margin-bottom: 0">
  You have a great day<br />
  <small>SPairing Team</small>
</p>
